<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.tangyi.exam.mapper.SubjectCategoryMapper">
    <resultMap id="subjectCategoryResultMap" type="com.github.tangyi.exam.api.module.SubjectCategory">
        <id column="id" property="id"/>
        <result column="category_name" property="categoryName"/>
        <result column="category_desc" property="categoryDesc"/>
        <result column="parent_id" property="parentId"/>
        <result column="sort" property="sort"/>
        <result column="creator" property="creator"/>
        <result column="create_date" property="createDate"/>
        <result column="modifier" property="modifier"/>
        <result column="modify_date" property="modifyDate"/>
        <result column="del_flag" property="delFlag"/>
        <result column="application_code" property="applicationCode"/>
    </resultMap>

    <sql id="subjectCategoryColumns">
        a.id,
        a.category_name,
        a.category_desc,
        a.parent_id,
        a.sort,
        a.creator,
        a.create_date,
        a.modifier,
        a.modify_date,
        a.del_flag,
        a.application_code
    </sql>

    <!-- where 条件 -->
    <sql id="whereColumnList">
        <if test="categoryName != null and categoryName != ''">
            and a.category_name like CONCAT('%',#{categoryName},'%')
        </if>
    </sql>

    <select id="get" resultMap="subjectCategoryResultMap">
        SELECT
        <include refid="subjectCategoryColumns"/>
        FROM subject_category a
        WHERE a.id = #{id} and a.del_flag = 0
    </select>

    <insert id="insert">
        INSERT  INTO subject_category (
            id,
            category_name,
            category_desc,
            parent_id,
            sort,
            creator,
            create_date,
            modifier,
            modify_date,
            del_flag,
            application_code
        ) VALUES (
            #{id},
            #{categoryName},
            #{categoryDesc},
            #{parentId},
            #{sort},
            #{creator},
            #{createDate},
            #{modifier},
            #{modifyDate},
            #{delFlag},
            #{applicationCode}
        )
    </insert>

    <select id="findList" resultMap="subjectCategoryResultMap">
        SELECT
        <include refid="subjectCategoryColumns"/>
        FROM subject_category a
        WHERE a.del_flag = 0
        <include refid="whereColumnList"/>
        order by sort desc
    </select>

    <select id="findListById" resultMap="subjectCategoryResultMap">
        SELECT
        <include refid="subjectCategoryColumns"/>
        FROM subject_category a
        WHERE a.id IN
        <foreach collection="ids" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <update id="update">
        UPDATE subject_category  SET
        <if test="categoryName != null">
            category_name = #{categoryName},
        </if>
        <if test="categoryDesc != null">
            category_desc = #{categoryDesc},
        </if>
        <if test="parentId != null">
            parent_id = #{parentId},
        </if>
        <if test="sort != null">
            sort = #{sort},
        </if>
        <if test="delFlag != null">
            del_flag = #{delFlag},
        </if>
        modifier = #{modifier},
        modify_date = #{modifyDate}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        UPDATE subject_category SET
			del_flag = 1
		WHERE id = #{id}
    </delete>
</mapper>
